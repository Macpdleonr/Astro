---
import { getCollection, render } from "astro:content";
import { SHOW_BUY_BUTTON } from "astro:env/server";
import Layout from "../../layouts/Layout.astro";
import MangaScore from "../../components/MangaScore.astro";
import BuyBotton from "../../components/BuyBotton.astro";

export async function getStaticPaths() {

  const mangas = await getCollection("mangas");
  return mangas.map((manga) => ({
    params: { id: manga.slug },
    props: { manga }
  }))
}

const { manga } = Astro.props;
const { data, slug } = manga;
const { title, author, img, readtime, description, buy } = data;

const { Content } = await render(manga);

export const prerender = true
---

<Layout title={`${title} - Dev Mangas`}>
  <div class="flex gap-12">
    <aside class="flex flex-col items-center gap-4">
      
      <a href='/' class="hover:underline opacity-70">‚Üê Go Back</a>
      
      <img transition:name={`img-${slug}`} class="rounded w-72 h-auto" src={`/${img}`} alt={title} />
      
      <MangaScore server:defer id={slug}>
        <span slot="fallback" class="text-xs opacity-70">Charging Score ...</span>
      </MangaScore>
      
      {
        SHOW_BUY_BUTTON && <BuyBotton server:defer buy={buy}/>
        
      }
    </aside>

    <main class="max-w-3xl">
      <h1 transition:name={`title-${slug}`} class="text-4xl font-bold mb-4">{title}</h1>
      <div class="prose prose-invert">
        <Content />
      </div>
    </main>
  </div>
</Layout>

