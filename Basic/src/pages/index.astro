---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const books = await getCollection('books')

console.log(books)

---

<Layout title="Dev Basics">
	<main>
		<h1 class="text-center text-7xl font-extrabold">Dev 
			<span class="block">Basic</span> </h1>
	</main>

	<section aria-label="Books" class="my-20">
		<div class="px-4 mx-auto max-w-screen-7xl">
			<div class="grid gap-6 md:grid-cols-2">
				{
					books.map(book => {
						const {slug, data } = book
						const {title, author, img, readtime, description, buy } = data
						return (
							<article class="flex">
								<a href={`/books/${slug}`} class="mb-2 xl:mb-0 transition hover:scale-110">
									<img class="mr-5 w-48 rounded" src={`/${img}`} alt={title} class="w-full rounded-lg"/>
								</a>
								
								<div class="flex flex-col justify-center">

									<h2 class="mb-2 text-2xl font-bold leading-tight text-white">
										{title}
									</h2>

									<p class="mb-4 text-gray-300 max-w-sm">
										{description}
									</p>

									<span class="text-xs">
										{readtime} minutes read
									</span>

								</div>
								
								
							</article>
						)
					})
				}
			</div>
		</div>
	</section>
</Layout>
