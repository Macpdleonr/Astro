---
import "../styles/global.css";
import GradientOverlay from '../components/GradientOverlay.astro';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>Something big is comming!</title>
		<meta name="description" content="Practice with Astro for SEO" />
		<meta name="keywords" content="Practice Astro, SEO with Astro" />
		<meta name="author" content="Me" />
		<meta name="robots" content="index, follow" />
		<meta name="googlebot" content="index, follow" />
		<meta name="bingbot" content="index, follow" />
		<meta name="yandexbot" content="index, follow" />
	</head>
	<body>
		<div id="background-mask" class="min-h-screen w-full">
			<GradientOverlay />
			<div class="relative z-2">
				<slot />
			</div>
		</div>
	</body>
</html>

<style >
	
	body {
		background: #000;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	#background-mask {
		background-image: url("/background.svg");
		background-size: cover;
		background-position: top;
		background-repeat: no-repeat;
	}

</style>
